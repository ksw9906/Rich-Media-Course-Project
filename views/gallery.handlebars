<html lang="en">
<body>
  <nav class="navbar navbar-inverse">
    <div class="container-fluid">
      <div class="navbar-header">
        <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-2">
          <span class="sr-only">Toggle navigation</span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
        <a class="navbar-brand" href="/">Vibrancy</a>
      </div>

      <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-2">
        <ul class="nav navbar-nav">
          <li><a href="/outline">Create</a></li>
          <li><a href="/templates">Templates</a></li>
          <li class="active"><a href="/gallery">Gallery</a></li>
          <li><a href="/logout">Logout</a></li>
        </ul>
      </div>
    </div>
  </nav>
  
  <div id="galleryAlert" class="alert alert-dismissible alert-danger">
    <button type="button" class="close" data-dismiss="alert">&times;</button>
    <p id="errorMessage">No pictures saved yet!</p>
  </div>  
  
  <section id="pictures">
  <div class="urls" id={{csrfToken}}>
  {{#if pictures}}
    {{#each pictures}}
      <p id={{this._id}}>{{this.dataString}}</p>
    {{/each}}
  {{/if}}
  </div>
  </section>

  
  <section id="canvases">
  </section>
  
  <canvas id="hiddenCanvas" width="700" height="500">
      Get a real browser!
  </canvas>
  
  <div id="deleteModal" class="modal">
    <div class="modalContent">
      <form id="deleteForm">
        <fieldset>
          <legend>Delete Image</legend>
          <input type="hidden" name="_csrf" id="csrf" value="{{csrfToken}}" />
          <p>Are you sure you want to delete?</p>
          <button type="button" id="formDeleteButton" class="btn btn-danger modalButton">Delete</button>
          <button type="button" id="cancelButton" class="btn btn-default modalButton">Cancel</button>
        </fieldset>
      </form>
    </div>
  </div>
  
  <script src="https://cdnjs.cloudflare.com/ajax/libs/babel-core/5.8.34/browser.min.js"></script>
  <script src="/assets/gallery.js" type="text/javascript"></script>
</body>
</html>