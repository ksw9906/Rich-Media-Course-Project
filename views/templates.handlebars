<html lang="en">
<body>
  <nav class="navbar navbar-inverse">
    <div class="container-fluid">
      <div class="navbar-header">
        <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-2">
          <span class="sr-only">Toggle navigation</span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
        <a class="navbar-brand" href="/">Vibrancy</a>
      </div>

      <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-2">
        <ul class="nav navbar-nav">
          <li><a href="/templates">Fill</a></li>
          <li><a href="/outline">Outline</a></li>
          <li class="active"><a href="/templates">Templates</a></li>          
          <li><a href="/logout">Logout</a></li>
        </ul>
      </div>
    </div>
  </nav>
  <div id="templateAlert" class="alert alert-dismissible alert-danger">
    <button type="button" class="close" data-dismiss="alert">&times;</button>
    <p id="errorMessage">No Templates Created yet!</p>
  </div>  
  
  <section id="templates">
  <div class="outlines" id={{csrfToken}}>
  {{#if draws}}
    {{#each draws}}
          <div class="draw" id={{this._id}}>
            {{#if this.calls}}
              {{#each this.calls}}
                <ul>
                  <li>{{this.shape}}</li>
                  <li>{{this.x}}</li>
                  <li>{{this.y}}</li>
                  <li>{{this.w}}</li>
                  <li>{{this.h}}</li>
                  <li>{{this.rad}}</li>
                  <li>{{this.stroke}}</li>
                  <li>{{this.line}}</li>
                </ul>
              {{/each}}
            {{/if}}
          </div>
    {{/each}}
  </div>
  </section>
  {{else}}
    <h3>No templates created</h3>
  {{/if}}

  
  <section id="canvases">
  </section>
  
  <canvas id="hiddenCanvas" width="700" height="500">
      Get a real browser!
  </canvas>
  
  <script src="https://cdnjs.cloudflare.com/ajax/libs/babel-core/5.8.34/browser.min.js"></script>
  <script src="/assets/templates.js" type="text/javascript"></script>
</body>
</html>