  <div id="colorPicker">
    <p id="fillLabel">Fill Color:</p>
    <div id="colorSwatch"></div>
    <p id="rLabel">R: 255</p>
    <p id="gLabel">G: 0</p>
    <p id="bLabel">B: 0</p>
    
    <div id="sliders">
      <input class="slider" type="range" id="rSlide" value="255" max="255" min="0">
      <input class="slider" type="range" id="gSlide" value="0" max="255" min="0">
      <input class="slider" type="range" id="bSlide" value="0" max="255" min="0">
    </div>
  </div>
  
  <div id="fillControls" class="btn-group-vertical">
    <a href="#" class="btn btn-default" id="clearButton">Clear</a>
    <a href="#" class="btn btn-default" id="saveButton">Save</a>
  </div>
  
  <div id="saveModal" class="modal">
    <div class="modalContent">
      <form id="saveForm">
        <fieldset>
          <legend>Save Image</legend>
          <input type="hidden" name="_csrf" id="csrf" value="{{csrfToken}}" />
          <button type="button" id="formSaveButton" class="btn btn-primary modalButton">Save</button>
          <button type="button" id="cancelButton" class="btn btn-default modalButton">Cancel</button>
        </fieldset>
      </form>
    </div>
  </div>
  
  <script src="https://cdnjs.cloudflare.com/ajax/libs/babel-core/5.8.34/browser.min.js"></script>
  <script src="/assets/fill.js" type="text/javascript"></script>
