<html lang="en">
<body>
  <nav class="navbar navbar-inverse">
    <div class="container-fluid">
      <div class="navbar-header">
        <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-2">
          <span class="sr-only">Toggle navigation</span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
        <a class="navbar-brand" href="/">Vibrancy</a>
      </div>

      <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-2">
        <ul class="nav navbar-nav">
          <li class="active"><a href="/templates">Fill<span class="sr-only">(current)</span></a></li>
          <li><a href="/outline">Outline</a></li>
          <li><a href="/templates">Templates</a></li>
          <li><a href="/logout">Logout</a></li>          
        </ul>
      </div>
    </div>
  </nav>
  
  <div id="fillAlert" class="alert alert-dismissible alert-danger">
    <button type="button" class="close" data-dismiss="alert">&times;</button>
    <p id="errorMessage">No Templates Selected!</p>
  </div> 
  
  <canvas id="mainCanvas" width="700" height="500">
      Get a real browser!
  </canvas>

  <canvas id="topCavas" width="700" height="500">
      Get a real browser!
  </canvas>
  
  <div id="calls">
  {{#if draws}}
    {{#each draws}}
      {{#if this.calls}}
        {{#each this.calls}}
          <ul>
            <li>{{this.shape}}</li>
            <li>{{this.x}}</li>
            <li>{{this.y}}</li>
            <li>{{this.w}}</li>
            <li>{{this.h}}</li>
            <li>{{this.rad}}</li>
            <li>{{this.stroke}}</li>
            <li>{{this.line}}</li>
          </ul>
        {{/each}}
      {{/if}}
    {{/each}}
    {{/if}}
  </div>
  
  <p id="fillLabel">Fill Color:</p>
  <div id="colors" class="btn-group-vertical">
    <a id="Blue" href="#" class="btn btn-default fillColor"></a>
    <a id="Red" href="#" class="btn btn-default fillColor"></a>
    <a id="Orange" href="#" class="btn btn-default fillColor"></a>
    <a id="Yellow" href="#" class="btn btn-default fillColor"></a>
    <a id="Green" href="#" class="btn btn-default fillColor"></a>
    <a id="BlueViolet" href="#" class="btn btn-default fillColor"></a>
    <a id="HotPink" href="#" class="btn btn-default fillColor"></a>
    <a id="Black" href="#" class="btn btn-default fillColor"></a>
    <a id="White" href="#" class="btn btn-default fillColor"></a>
  </div>
  
  <div id="controls" class="btn-group-vertical">
    <a href="#" class="btn btn-default" id="clearButton">Clear</a>
    <a href="#" class="btn btn-default" id="exportButton">Export</a>
<!--    <a href="#" class="btn btn-default" id="undoButton">Undo</a>-->
  </div>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/babel-core/5.8.34/browser.min.js"></script>
  <script src="/assets/fill.js" type="text/javascript"></script>
</body>
</html>