  <div id="fillAlert" class="alert alert-dismissible alert-danger">
    <button type="button" class="close" data-dismiss="alert">&times;</button>
    <p id="errorMessage">No Templates Selected!</p>
  </div> 
  
  <canvas id="mainCanvas" width="700" height="500">
      Get a real browser!
  </canvas>

  <canvas id="topCavas" width="700" height="500">
      Get a real browser!
  </canvas>
  
  <div id="calls">
  {{#if draws}}
    {{#each draws}}
      {{#if this.calls}}
        {{#each this.calls}}
          <ul>
            <li>{{this.shape}}</li>
            <li>{{this.x}}</li>
            <li>{{this.y}}</li>
            <li>{{this.w}}</li>
            <li>{{this.h}}</li>
            <li>{{this.rad}}</li>
            <li>{{this.x2}}</li>
            <li>{{this.y2}}</li>
            <li>{{this.line}}</li>
          </ul>
        {{/each}}
      {{/if}}
    {{/each}}
    {{/if}}
  </div>
  
